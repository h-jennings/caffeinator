{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["esnext", "dom"],
    "allowJs": true,
    "sourceMap": true,
    "jsx": "react",
    "moduleResolution": "node",
    "baseUrl": ".",
    "outDir": "./dist",
    "strict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "paths": {
      "@/*": ["./src/*"],
      "@components/*": ["./src/js/components/*"],
      "@domains/*": ["./src/js/domains/*"],
      "@styles/*": ["./src/styles/*"]
    }
  },
  "include": [
    "src/**/*.tsx",
    "src/**/*.ts",
    "src/js/utils/global/toTimeString.js"
  ],
  "exclude": ["dist", "config", "node_modules", "build", "scripts", "webpack"]
}
